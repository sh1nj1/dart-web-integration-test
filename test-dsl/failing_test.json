{
  "name": "Failing Test Suite for Screenshot Demo",
  "baseUrl": "http://localhost:3000",
  "testCases": [
    {
      "name": "Element Not Found Test",
      "description": "테스트 실패를 유발하여 스크린샷을 확인하는 테스트",
      "url": "http://localhost:3000/#/",
      "steps": [
        {
          "action": "wait",
          "waitTime": 3000
        },
        {
          "action": "click",
          "selector": "#non-existent-element"
        },
        {
          "action": "assert_text",
          "selector": "h1",
          "expected": "This Will Fail"
        }
      ]
    },
    {
      "name": "Wrong Text Assertion Test",
      "description": "텍스트 검증 실패로 스크린샷을 촬영하는 테스트",
      "url": "http://localhost:3000/#/about",
      "steps": [
        {
          "action": "wait",
          "waitTime": 3000
        },
        {
          "action": "assert_text",
          "selector": "h1",
          "expected": "Wrong Title Text"
        }
      ]
    }
  ]
}
